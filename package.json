{
  "name": "min-telnet-lib",
  "version": "1.0.0",
  "description": "Simple and manual lib for connect telnet",
  "homepage": "https://github.com/skvoryanich/min-telnet-lib#readme",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skvoryanich/min-telnet-lib.git"
  },
  "keywords": [
    "telnet",
    "async",
    "simple",
    "minimal"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src --ext .ts",
    "lint-fix": "eslint src --ext .ts --fix",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && npm run rename:esm",
    "build": "npm run build:cjs && npm run build:esm",
    "clean": "rimraf dist",
    "rename:esm": "/bin/zsh ./scripts/fix-mjs.sh",
    "prepack": "npm run clean && npm run build",
    "test": "ts-node test.ts"
  },
  "author": "skvoryanich",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "rimraf": "^6.0.1",
    "ts-custom-error": "^3.3.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "node": "^23.9.0",
    "tslib": "^2.6.2"
  }
}
